citHeader("To cite package 'MAVIS' in publications use: ")
 
 vers <- paste("R package version", meta$Version)

 citEntry(entry="Manual",
  	  title = "MAVIS: Meta Analysis via Shiny",
		  author = "W. Kyle Hamilton, Burak Aydin, Atsushi Mizumoto",
		  year = 2016,
		  note = vers,
		  textVersion =
		  paste("W. Kyle Hamilton, Burak Aydin, and Atsushi Mizumoto (",
				2016,
				"). MAVIS: Meta Analysis via Shiny. ",
				vers, ".", sep=""),
      url = {"http://CRAN.R-project.org/package=MAVIS"})